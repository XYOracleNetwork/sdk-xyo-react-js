{
  "root": true,
  "extends": [
    "@xylabs", "@xylabs/react"
  ],
  "ignorePatterns": [
    "**/dist",
    "**/node_modules",
    "**/docs",
    "coverage",
    "docs",
    "bin",
    "docker",
    "**/storybook-static",
    "**/node_modules",
    "storybook-static",
    ".yarn",
    ".depcheckrc"
  ],
  "rules": {
    "no-restricted-imports": [
      "warn",
      {
        "paths": [
          "@xyo-network/sdk-xyo-react",
          "@xyo-network/modules",
          "@xyo-network/node",
          "@xyo-network/sdk",
          "@xyo-network/plugins",
          "@xyo-network/protocol",
          "@xyo-network/react-modules",
          "@xyo-network/react-plugins",
          "@xyo-network/react-sdk",
          "@xyo-network/react-test",
          "lodash",
          "react-player",
          "filepond",
          "aos",
          ".",
          "..",
          "../..",
          "../../..",
          "../../../..",
          "../../../../..",
          "../../../../../..",
          "../../../../../../..",
        ]
      }
    ],
    "import/no-default-export": "warn",
    "import/no-internal-modules": ["warn", {"allow": [
      "**/*.jpg",
      "**/*.png",
      "**/*.svg",
      "react-icons/*",
      "lodash/*",
      "@mui/**/*"
    ]}]
  }
}